  if ($may_cache) {
    $items[] = array( 'path' => file_directory_path() .'/imagecache', 
                      'callback' => 'imagecache_cache',
                      'access' => TRUE,
                      'type' => MENU_CALLBACK
               );     
    $items[] = array( 'path' => 'admin/imagecache', 
                      'title' => t('imagecache'),
                      'access' => user_access('administer imagecache'),
                      'callback' => 'imagecache_admin_list',
